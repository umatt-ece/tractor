{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "openOCD",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/${input:assn}/${input:problem}.elf",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "targetArchitecture": "arm",
      "launchCompleteCommand": "None",
      "hardwareBreakpoints": {"require": true},
      "miDebuggerPath": "arm-none-eabi-gdb",
      "setupCommands": [
        {"text": "file ${workspaceFolder}/${input:assn}/${input:problem}.elf", "ignoreFailures": false},
        {"text": "target extended-remote | openocd -f board/st_nucleo_f0.cfg -c 'gdb_port pipe'", "ignoreFailures": false},
        {"text": "monitor target_request debugmsgs enable", "ignoreFailures": false},
        {"text": "monitor trace point 1", "ignoreFailures": false},
        {"text": "monitor reset halt", "ignoreFailures": false}
      ]
    },
  ],

  "inputs": [
    {
      "id": "assn",
      "type":"pickString",
      "description": "assignment subdirectory",
      "options": [
        "blinky",
      ],
      "default": "blinky"
    },
    {
      "id": "problem",
      "type":"promptString",
      "description": "enter the .elf file name",
    },
  ]    
}